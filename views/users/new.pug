extends ../application.pug

block content
  .row
  .col-xs-6.offset-xs-3
    h1 Register a user
    hr
    form(action='/users' method="POST")
      .form-group
        input.form-control(type='email' placeholder="jekkemail" name='email' required='')
      .form-group
        input(type='password', name='password' placeholder="jekkpassword" class='form-control"', required='')
      .form-group.text-xs-right
        button.btn-succes.btn-lg(type='submit') Register
