extends ../application.pug

block content
  .container
    .col-md-4.offset-md-3
      img(src= menu.image + '.jpg' width="300px" height="200px")
    .col-md-2
      .row
        h2= menu.title
        hr
      .row
        img(src="/img/heart.svg.png" width="200px" height="200px")
      .row
        p= ('This menu received ' + menu.votes + ' votes')
      .row
        p= menu.info
