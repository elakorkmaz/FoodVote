extends ../application.pug

block content
  .container
    .row
      .col-md-5.offset-md-2
        img(src= menu.image)
      .col-md-3
        .row
          h2(id="menu-title")= menu.title
          hr
        .row
          form(action="/menu/" + menu.id + "/votes" method="POST")
            button(type="submit" class="btn btn-link")
              img(src= "/img/heart.svg.png" id="heart")
        .row
          p(id="vote-count")= ('This menu received ' + voteCount.count + ' votes')

      .col-md-8.offset-md-2
          h4 Ingredients:
          p= menu.info
