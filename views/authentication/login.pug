extends ../application.pug

block content
  .container(class="col-md-6 offset-md-3")
    .row
      .col-md-8.offset-md-2
        h2(id="header") Login as a user
        form(action="/authentication/login" method="POST")
          .form-group
            input(type="email" name="email" class="form-control" id="user-email" placeholder="email" required=true)
          .form-group
            input(type="password" name="password" class="form-control" id="user-password" placeholder="password" required=true)
          .form-goup.text-xs-right
            button.btn.btn-success(type="submit") Login
