extends ../application.pug

block content
  .container
    .row
      .col-xs-6.offset-xs-3
        h2 Register as a user
        form(action="/authentication/new" method="POST")
          .form-group
            input(type="text" name="name" class="form-control" id="user-name" placeholder="Name" required=true)
          .form-group
            input(type="text" name="surname" class="form-control" id="user-surname" placeholder="Surname" required=true)
          .form-group
            input(type="email" name="email" class="form-control" id="user-email" placeholder="email" required=true)
          .form-group
            input(type="password" name="password" class="form-control" id="user-password" placeholder="password" required=true)
          .form-goup.text-xs-right
            button.btn.btn-success(type="submit") Register
